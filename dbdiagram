Table groups {
  id integer [primary key]
  uuid varchar [not null, unique]
  group_name varchar [not null,note:"グループ名"]
  outing_schedule timestamp [not null,note: "ご飯日程"]
  created_at timestamp
  updated_at timestamp
}

Table shops {
  id integer [primary key]
  shop_name varchar [not null,note: "お店の名前"]
  address varchar [note: "お店の住所"]
  shop_url varchar [note: "お店のURL"]
  shop_status integer [not null,note: "0:候補、1:行き先決定"]
  group_id integer [not null, ref: > groups.id]
  created_at timestamp
  updated_at timestamp
}

Table votes {
  id integer [primary key]
  group_id integer [not null, ref: > groups.id]
  shop_id integer [not null, ref: > shops.id]
  user_token varchar [not null, note: "ユーザーを一意に識別するID"]
  score integer [not null, note: "投票した得点"]
  created_at timestamp
  updated_at timestamp
}

Table questions {
  id integer [primary key]
  question_text varchar [not null,note: "質問内容"]
  created_at timestamp
  updated_at timestamp
}

Table answers{
  id integer [primary key]
  question_id interger [not null,ref: > questions.id]
  group_id integer [not null,ref: > groups.id]
  user_token varchar [not null, note: "ユーザーを一意に識別するID"]
  answer varchar [note: "ユーザーの回答"]
  created_at timestamp
  updated_at timestamp
}
